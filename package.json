{
	"name": "loxbuddy",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"pm2:start": "vite build && pm2 start ecosystem.custom.config.cjs",
		"pm2:restart": "vite build && pm2 restart ecosystem.custom.config.cjs",
		"pm2:stop": "pm2 stop ecosystem.custom.config.cjs",
		"pm2:delete": "pm2 delete ecosystem.custom.config.cjs",
		"pm2:kill": "pm2 kill",
		"pm2:list": "pm2 list",
		"pm2:logs": "pm2 logs",
		"pm2:status": "pm2 status"
	},
	"devDependencies": {
		"@iconify/svelte": "^5.1.0",
		"@skeletonlabs/skeleton": "^4.3.2",
		"@skeletonlabs/skeleton-svelte": "^4.3.2",
		"@svelte-put/inline-svg": "^4.0.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.5.3",
		"@sveltejs/kit": "^2.52.0",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.51.2",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"@jaames/iro": "^5.5.2",
		"@lucide/svelte": "^0.553.0",
		"@types/sprintf-js": "^1.1.4",
		"@types/suncalc": "^1.9.2",
		"date-fns": "^4.1.0",
		"mqtt": "^5.11.0",
		"sprintf-js": "^1.1.3",
		"suncalc": "^1.9.0",
		"svelte-i18n": "^4.0.1",
		"svelte-lox-client": "git+https://git@github.com/nufke/svelte-lox-client.git"
	}
}
